    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.jfighter.discoverysite.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.jfighter.discoverysite.ui.radar.RadarFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_radar" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.jfighter.discoverysite.ui.discovery.DiscoveryFragment"
        android:label="@string/title_notifications"
